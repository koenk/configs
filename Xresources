!
! urxvt (rxvt-unicode)
!
URxvt*background: #000000
URxvt*foreground: #ffffff
! Better, more visible (lighter) color blue
URxvt*color12: rgb:5c/5c/ff
URxvt.scrollBar: false
URxvt.perl-lib: /home/koen/git/urxvt-perls
URxvt.perl-ext: default,url-select,clipboard,font-size
! Open urls
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: google-chrome
URxvt.url-select.underline: true
! Clipboard integration with X
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste
! Change font-size on the fly
URxvt.keysym.C-Up:    perl:font-size:increase
URxvt.keysym.C-Down:  perl:font-size:decrease
URxvt.font-size.step: 2
! That utf8 input box thing when pressing ctrl+shift
URxvt.iso14755: false
! Different font (former compatible with powerline)
!URxvt*font: xft:Terminess Powerline:size=8
URxvt*font: xft:Terminus:size=8

! urxvt (rxvt-unicode)
!
URxvt*background: #000000
URxvt*foreground: #ffffff
URxvt.scrollBar: false
URxvt.perl-ext: default,url-select,clipboard
! Open urls
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: firefox-bin
URxvt.url-select.underline: true
! Clipboard integration with X
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste
! That utf8 input box thing when pressing ctrl+shift
URxvt.iso14755: false
! Different font, also compatible with powerline
URxvt*font: xft:Terminess Powerline:size=8

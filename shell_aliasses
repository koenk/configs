# Contains aliasses, redefinitions and functions for both bash and zsh shells.


# Default arguments (colors, case-insensitive)
alias grep='grep -i --color=auto'
alias ack='ack -i'
alias df='df -h'
alias du='du -c -h'
alias locate='locate -i'
alias less='less -R' # Interpret ANSI color escape sequences
alias tmux='tmux -2' # Forces 256 color

case $OSTYPE in
    linux*)  alias ls='ls --color=auto' ;;
    darwin*) alias ls='ls -G' ;;
esac

# Shorthands, typo's and new commands
alias ll='ls -lhA'
alias sl='ls'
alias la='ls -a'
alias cd..='cd ..'
alias more='less'
alias v='vim -R -' # Piping into vim
alias hist='history|grep $1' # Search history
alias da='date "+%A, %B, %d, %Y [%T]"'
alias dul='du --max-depth=1'
alias duls='du --max-depth=1 | sort -h'
alias cack='ack --color --group'
alias ackc='cack'

# Single-letter commands are awesome
alias f='fg'
alias c='cd'
alias m='make'
alias g='grep'
alias l='ls'
alias mi='make install'
alias mc='make clean'

# Git related shortcuts
alias gs='git status'
alias gc='git commit'
alias gcu='git reset --soft "HEAD^"'
alias gco='git checkout'
alias gcl='git clone'
alias ga='git add'
alias gp='git pull'
alias gpr='git pull -r'
alias gd='git diff'
alias gdc='git diff --cached'
alias gb='git branch'
alias gbl='git blame'
alias gl="git log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"

# If not root, prepend sudo when needed
if [ $UID -ne 0 ]; then
    alias pacman='sudo pacman'
    alias netcfg='sudo netcfg'
    alias wifi-menu='sudo wifi-menu'
    alias updatedb='sudo updatedb'
    alias emerge='sudo emerge'
    alias apt-get='sudo apt-get'
    alias iwconfig='sudo iwconfig'
    alias suspend='sudo pm-suspend'
    alias reboot='sudo reboot'
    alias poweroff='sudo poweroff'
fi

# mkdir & cd into it
function mkc() {
  mkdir -p "$*" && cd "$*" && pwd
}

# cd & ll
function cl () {
   if [ $# = 0 ]; then
      cd && ll
   else
      cd "$*" && ll
   fi
}

# Rewrite cd to accept files as path (cd into path containing file)
function cd() {
    if [ ! $# = 0 ] && [[ -f $@ ]]; then
        echo "cd `dirname "$@"`"
        builtin cd "`dirname "$@"`"
    else
        builtin cd "$@" 2> /dev/null

        # I have a bad habit of typing 'l' (alias of ls) before pressing the
        # enter key for the cd line. Fix that here too while we're at it...
        if [ ! $? = 0 ] && [[ $@ =~ /l$ ]]; then
            builtin cd "`dirname "$@"`"
            l
        fi
    fi
}

# Extracts any archive format you throw at it (kinda)
extract () {
    if [ -f "$1" ] ; then
      case "$1" in
        *.tar.bz2)   tar xjf "$1"     ;;
        *.tar.gz)    tar xzf "$1"     ;;
        *.tar.xz)    tar xJf "$1"     ;;
        *.bz2)       bunzip2 "$1"     ;;
        *.rar)       unrar e "$1"     ;;
        *.gz)        gunzip "$1"      ;;
        *.tar)       tar xf "$1"      ;;
        *.tbz2)      tar xjf "$1"     ;;
        *.tbz)       tar xf "$1"      ;;
        *.tgz)       tar xzf "$1"     ;;
        *.zip)       unzip "$1"       ;;
        *.Z)         uncompress "$1"  ;;
        *.7z)        7z x "$1"        ;;
        *)     echo "'$1' cannot be extracted via extract()" ;;
         esac
     else
         echo "'$1' is not a valid file"
     fi
}
alias e='extract'
alias x='extract'
